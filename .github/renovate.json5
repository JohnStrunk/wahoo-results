{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:best-practices',
    ':enablePreCommit',
    ':gitSignOff',
  ],
  ignorePaths: [
    'docs/requirements.txt',
  ],
  labels: [
    'dependencies',
  ],
  lockFileMaintenance: {
    enabled: true,
  },
  packageRules: [
    {
      description: "Devcontainer 'features' don't support digest pinning",
      matchManagers: [
        'devcontainer',
      ],
      matchDepTypes: [
        'feature',
      ],
      pinDigests: false,
    },
    {
      description: 'Update renovatebot/pre-commit-hooks weekly to decrease noise',
      matchPackageNames: [
        'renovatebot/pre-commit-hooks',
      ],
      schedule: [
        'before 9am on monday',
      ],
    },
  ],
  customManagers: [
    {
      customType: 'regex',
      description: 'UPX version updates',
      managerFilePatterns: [
        '/^.github/(?:workflows|actions)/.+\\.ya?ml$/',
        '/\\.md$/',
      ],
      matchStrings: [
        'UPX_VERSION: "(?<currentValue>.+?)"',
        'upx --version (?<currentValue>\\d+\\.\\d+\\.\\d+)',
      ],
      depNameTemplate: 'upx/upx',
      datasourceTemplate: 'github-releases',
      extractVersionTemplate: '^v(?<version>.*)$',
    },
  ],
  semanticCommits: 'disabled',
  timezone: 'America/New_York',
}
